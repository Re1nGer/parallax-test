---
import Bg from '../../public/about_bg_mobile.png';
import {Image} from "astro:assets";
import AboutMeBorder from '../../public/v2.svg';
import AboutMeImg from '../../public/about_me_img.png';
import YearsExpBorder from '../assets/exp_border.svg';
import StackIcons from "./StackIcons.astro";
import AboutMeImg2 from '../assets/about_me_img2.png';
import Achievement from '../assets/achievment_border.svg';
import Aws from '../assets/aws.png';
import Leetcode from '../assets/leetcode_100.png';
import PullShark from '../assets/pull_shark.png';
import PairCoding from '../assets/code_pair.png';
import JavascriptBlur from '../assets/javascript_blur.svg';
import DarkBlur from "../assets/dark_blur.svg";
import DarkGreen from '../assets/dark_green.svg';

---
<section id="aboutme_mb" class="lg:hidden m-0 md:mt-[200px]">
    <div class="flex flex-col mb-[25px] px-[40px]">
        <h1 class="text-[32px] font-valorax text-dark_purple purple-text-shadow">Station 1:</h1>
        <h1 class="text-[32px] font-valorax text-black white-text-shadow">About Me</h1>
    </div>
    <p class="text-[16px] text-white px-[40px]">Begin your journey through the stations of our planet, uncovering the essence of the developer behind the scenes.</p>
</section>
<section class="relative mt-[3rem] h-[600px] lg:hidden w-full">
    <Image src={Bg} alt="background" class="max-h-[664px] w-full absolute object-cover drop-shadow-lg" />
    <div class="w-full sh h-[1px]"></div>
    <div class="w-full mt-[25px] max-h-[1476px] flex flex-col items-center">
        <Image src={AboutMeBorder} class="absolute h-[1376px] top-12 z-10" alt="background" />
        <Image src={AboutMeImg} class="relative z-10 max-w-[204px] max-h-[261px] mt-[91px]" alt="me" />
        <StackIcons />
        <div class="flex flex-col items-center h-full w-full relative">
            <Image src={YearsExpBorder} class="z-10 relative mt-6 top-14" alt="years of experience" />
            <div class="flex flex-col gap-[12px] absolute z-10 px-[4rem] bottom-0 max-w-[300px] h-full items-center justify-end">
                <h1 class="font-valorax text-dark_purple text-[25px]">3 years</h1>
                <p class="text-white text-[16px] text-center">of commercial experience</p>
            </div>
        </div>
    </div>
    <div class="absolute flex justify-center w-full h-full">
        <Image src={Achievement} class="relative z-10 mt-[80px] flex justify-center max-w-[204px] max-h-[247px]" alt="achievement border" />
    </div>

    <div class="absolute z-10 flex justify-center mt-4 w-full h-full items-end gap-[10px] max-h-[248px]">
        <div class="flex flex-col gap-[10px] items-end">
            <div class="h-[63px] w-[65px] flex justify-center items-center rounded-full group gr_icon relative z-20">
                <Image src={Aws} class="max-h-[42px] max-w-[42px] w-full h-full relative z-10" alt="aws" />
                <Image src={DarkBlur} class="group-active:opacity-100 transition-opacity max-w-[40px] max-h-[40px] h-full w-full top-5 opacity-40 absolute z-0" alt="react blur" />
            </div>
            <div class="h-[63px] w-[65px] flex justify-center items-center rounded-full group gr_icon relative z-20">
                <Image src={Leetcode} class="max-h-[42px] max-w-[42px] w-full h-full relative z-10" alt="aws" />
                <Image src={JavascriptBlur} class="group-active:opacity-100 transition-opacity max-w-[40px] max-h-[40px] h-full w-full top-4 scale-y-125 opacity-70 absolute z-0" alt="react blur" />
            </div>
        </div>
        <div class="flex flex-col gap-[10px]">
            <div class="h-[63px] w-[65px] flex justify-center items-center rounded-full group gr_icon relative z-20">
                <Image src={PullShark} class="max-h-[42px] max-w-[42px] w-full h-full relative z-10" alt="aws" />
                <Image src={DarkBlur} class="group-active:opacity-100 transition-opacity max-w-[40px] max-h-[40px] h-full w-full top-5 opacity-40 absolute z-0" alt="react blur" />
            </div>
            <div class="h-[63px] w-[65px] flex justify-center items-center rounded-full group gr_icon relative z-20">
                <Image src={PairCoding} class="max-h-[42px] max-w-[42px] w-full h-full relative z-10" alt="aws" />
                <Image src={DarkGreen} class="group-active:opacity-100 transition-opacity max-w-[40px] max-h-[40px] h-full w-full top-5 opacity-80 absolute z-0" alt="react blur" />
            </div>
        </div>
    </div>

    <div class="w-full sh h-[10px] z-10 absolute mt-[-1rem] lg:hidden"></div>
    <div class="flex absolute w-full h-full items-start">
        <Image src={AboutMeImg2} alt="me" class="w-full relative h-full object-cover top-0 z-0" />
    </div>
</section>
<style>
    .sh {
        box-shadow: rgba(0,0,0, 0.5) 20px 20px 30px;
    }
     .gr_icon {
         padding: .25rem;
         border: 1px solid rgba(255, 255, 255, 0.3);
         background: rgba(255, 255, 255, 0.20);
     }
</style>
