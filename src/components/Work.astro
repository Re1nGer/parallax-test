---
import Tower from '../assets/tower.png';
import {Image} from "astro:assets";
import Project1Modal from "./react/Project1Modal";
import Project2Modal from "./react/Project2Modal";
import Project3Modal from "./react/Project3Modal";
---

<section id="work" class="md:hidden mb-[47px] mt-[1100px] sh">
    <div class="flex flex-col mb-[25px] px-[40px]">
        <h1 class="text-[32px] font-valorax text-dark_blue blue-text-shadow">Station 2:</h1>
        <h1 class="text-[32px] font-valorax text-black white-text-shadow">Work Experience</h1>
    </div>
    <p class="text-[16px] text-white px-[40px]">Step into the Corporate Matrix Core, where each project is a guarded secret file on a different security level.</p>
    <section class="relative px-[35px]">
        <Image src={Tower} class="max-w-[251px] max-h-[563px] mt-9" alt="tower" />
        <div class="absolute w-full top-0 right-0 h-full flex flex-col justify-center gap-[40px]">
            <Project1Modal client:load />
            <Project2Modal client:load />
            <Project3Modal client:load />
        </div>
    </section>
</section>

<style>
    .sh {
        box-shadow: rgba(0,0,0, 0.5) 20px 20px 30px;
    }
</style>