                    <Image src={AboutMeStackBorder} class="max-w-[477px] max-h-[261px]" alt="about me stack border" />
                    <div class="absolute flex flex-col justify-end gap-[10px] max-w-[300px] w-full z-10">
                        <h1 class="text-light_purple text-[35px] font-valorax self-center">Stack</h1>
                        <div class="flex gap-[10px]">
                            <React />
                            <CSharp />
                            <NodeJs />
                            <GoLang />
                            <Postgres />
                        </div>
                        <div class="flex gap-[10px] justify-center">
                            <Docker />
                            <Redux />
                            <Javascript />
                            <Typescript />
                        </div>
                    </div>
                </div>
                <div class="flex flex-col">
                    <div class="h-full w-full relative">
                        <Image src={YearsBg} class="lg:max-w-[243px] lg:max-h-[196px] xl:max-w-[263px] xl:max-h-[206px] h-full w-full" alt="years bg" />
                        <h1 class="lg:text-[30px] xl:text-[35px] text-dark_purple top-12 left-8 font-valorax absolute">4 years</h1>
                        <p class="lg:text-[20px] xl:text-[25px] text-white absolute top-24 left-14">of commercial experience</p>
                    </div>
                    <div class="h-full w-full relative">
<!--
                        <div class="tooltip absolute top-[-8rem] right-[-2rem] z-30">This is a Tooltip with a gradient or solid coloration and with border radius </div>
-->
                        <Image src={AchievementsBg} class="lg:max-w-[243px] lg:max-h-[274px] xl:max-w-[263px] xl:max-h-[328px] w-full h-full" alt="achievements bg" />
                        <h1 class="lg:text-[19px] xl:text-[21px] text-light_purple absolute font-valorax top-12 left-7">achievements</h1>
                        <div class="flex flex-col gap-[17px] absolute top-24 left-10">
                            <div class="w-full h-full flex gap-[17px]">
                                <AwsBadge />
                                <LeetCodeBadge />
                            </div>
                            <div class="w-full h-full flex gap-[17px]">
                                <CodePair />
                                <PullSharkBadge />
                            </div>
                        </div>
                    </div>
                </div>
                <Image src={MeBg} alt="bg image" />
            </div>
        </div>
    </div>
</section>

